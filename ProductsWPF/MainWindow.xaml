<Window x:Class="ProductsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TabControl TabStripPlacement="Top">
                <TabItem Header="Categories" Selector.Selected="TabSelected">
                
                </TabItem>
                <TabItem Header="Products" Selector.Selected="TabSelected">
                
                </TabItem>
            </TabControl>
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
    </Grid>
</Window>
